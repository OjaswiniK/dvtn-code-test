<script>
        .panel {
        border: 1px solid #ddd;
        padding: 20px;
        margin: 20px 0;
        text - align: center;
    }

        .panel img {
        max - width: 100 %;
        height: auto;
    }

        .panel p {
        font - size: 18px;
        margin - top: 10px;
    }
        .text - panel {
        border: 1px solid #ccc;
        padding: 15px;
        margin: 20px 0;
        background - color: #f9f9f9;
    }

        .text - panel p {
        font - size: 16px;
    }

        .large - text - panel {
        padding: 20px;
        background - color: #f9f9f9;
        border: 1px solid #ccc;
        margin - top: 20px;
        font - size: 1.2em;
        line - height: 1.6;
    }

</script>
    
