@model DVTN.Frontend.Web.Features.HomePage.HomePageViewModel

<div id="page-homepage">

    <vc:page-hero hero-text="We design and deliver the complex infrastructure needed to build better communities" is-full-size="true"/>
    
    @* TODO render components here *@
    <div class="panel">
        @*  <img src="~/brand/logo.png" alt="Sample Image" class="img-responsive" />    *@
        <img src="@Model.ImageUrl" alt="Sample Image" class="img-responsive" />
    </div>
    <div class="text-panel">
        <p>@Model.Textpanel</p>
    </div>
    <div class="large-text-panel">
        <p>@Model.LargeTextPanel</p>
    </div>
